<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="singletonBean" class="ru.aston.osipov_vv.task10.CharmingKnight"
          scope="singleton" init-method="init" destroy-method="destroy">
        <property name="age" value="27"/>
        <property name="quest" ref="prototypeQuest"/>
    </bean>

    <bean id="prototypeQuest" class="ru.aston.osipov_vv.task10.DragonQuest"
          scope="prototype" init-method="init"/>


</beans>